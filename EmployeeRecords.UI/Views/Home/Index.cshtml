@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
@*    <div>
        <input type="file" />
        <input class="btn btn-info text-white" type="submit" value="Upload" />
        <a class="btn btn-info text-white">Refresh</a>
    </div>*@
    <div class="p-3">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employee Number</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Employee Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Count() > 0)
                {
                    foreach(var e in Model)
                    {
                        <tr>
                            <td>@e.EmployeeNumber</td>
                            <td>@e.FirstName</td>
                            <td>@e.LastName</td>
                            <td style="color:@e.Color">@e.EmployeeStatus</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
